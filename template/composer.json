{
    "name": "{{ vendor | case.kebab }}/{{ package | case.kebab }}",
    "type": "library",
    "description": "{{ description }}",
    "keywords": [
        "{{ vendor }}",
        "{{ package }}"
    ],
    "homepage": "https://github.com/{{ vendor | case.kebab }}/{{ package | case.kebab }}",
    "license": "MIT",
    "authors": [
        {
            "name": "{{ author name }}",
            "email": "{{ author email }}",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "{{ vendor | case.pascal }}\\{{ package | case.pascal }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ vendor | case.pascal }}\\{{ package | case.pascal }}\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=psr2 src/"
    }
}
